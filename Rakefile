begin
  require 'jeweler'
  Jeweler::Tasks.new do |s|
    s.name = "cucumber-step_definitions"
    s.summary = "Rspec helpers for specing Cucumber step definitions"
    s.email = ["joe@josephwilk.net", "matt@mattwynne.net"]
    s.homepage = "http://github.com/mattwynne/cucumber-step_definitions"
    s.description = "Rspec helpers for specing Cucumber step definitions"
    s.authors = ["Matt Wynne", "Joseph Wilk"]
    s.add_dependency 'cucumber'
    s.add_dependency 'rspec' 
  end
rescue LoadError
  puts "Jeweler, or one of its dependencies, is not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
